{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "paths": {
      "~/*": ["./reference-app/*"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "strict": true,
    "target": "ESNext"
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
